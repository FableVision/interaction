{
    "compilerOptions": {
        "outDir": "./dist/",
        "declaration": true,
        "module": "es2020",
        "target": "es2017",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        // "sourceMap": true,
        "skipLibCheck": true,

        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true
    },
    "includes": [
        "./index.ts"
    ]
}